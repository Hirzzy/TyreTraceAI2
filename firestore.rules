// Multi-tenant simple : admin voit tout, sinon locataire voit son tenantId
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuth() { return request.auth != null; }
    function isAdmin() {
      return isAuth() &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
    }
    function myTenant() { return request.auth.uid; }
    function sameTenant(res) { return res.tenantId == myTenant(); }
    function creatingForSelf() { return request.resource.data.tenantId == myTenant(); }

    match /{c}/{id} {
      // READ : admin ou même tenant
      allow read: if isAdmin() || (isAuth() && sameTenant(resource.data));

      // CREATE : doc doit avoir tenantId = mon UID
      allow create: if isAdmin() || (isAuth() && creatingForSelf());

      // UPDATE/DELETE : admin, ou même tenant et tenantId inchangé
      allow update, delete: if isAdmin() ||
        (isAuth() && sameTenant(resource.data) &&
         request.resource.data.tenantId == resource.data.tenantId);
    }
  }
}
